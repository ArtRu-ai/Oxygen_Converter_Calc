@model OxygenConverterWebApp.Domain.Variants

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.ID_Variant, "Выберите вариант исходных данных", htmlAttributes: new {@class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownList("ID_Variant", null, htmlAttributes: new {@class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Variant, "", new {@class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left: auto; margin-top: 20px">
            <button type="submit" style="font-size: 16px" class="btn btn-primary">Применить</button>
        </div>
    }

    @using (Html.BeginForm("RezultDemo", "Home", FormMethod.Post))
    {
        <p>

        </p>
        <div class="container">
            <h2>Исходные данные</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Наименование показателя, ед. изм.</th>
                            <th>Величина</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Номинальная емкость конвертера</td>
                            <td>@Html.TextBox("InputData.Q", (double)(ViewBag.InputData.Q), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Удельная интенсивность продувки</td>
                            <td>@Html.TextBox("InputData.q", (double)(ViewBag.InputData.q), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Температура кислорода перед соплами кислородной фурмы</td>
                            <td>@Html.TextBox("InputData.T", (double)(ViewBag.InputData.T), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                        <tr>
                            <td>Давление кислорода на срезе сопел кислородной фурмы</td>
                            <td>@Html.TextBox("InputData.P", (double)(ViewBag.InputData.P), htmlAttributes: new { type = "text", style = " width:100px; " })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-group" style="margin-left: auto; margin-top: 20px">
            <button type="submit" style="font-size: 16px" class="btn btn-primary">Расчет</button>
        </div>
    }
</body>
</html> 